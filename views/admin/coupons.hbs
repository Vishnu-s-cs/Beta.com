<section class="mr-4">
      <div class="row">
    {{!-- <a href="/admin/add-category"class=" betaButton mt-1 ml-auto" style="text-decoration: none ; color:black">Add Category</a> --}}
    <section class="category">
  <form action="/admin/coupons" method="post">
      <input type="text" class="form-control" name="coupon" placeholder="Add coupon..." required>
      <input type="number" class="form-control" name="off" placeholder="Offer for coupon..." required>
      <button type="submit"  class="betaButton mt-1 ml-auto" style="text-decoration: none ; ">Add Coupon</button>
  </form>
</section>
  </div>
     <table id="userTable" class="table mt-5 pl-3">
    <thead>
      <tr>
        <th scope="col" style="width: 226.3px;">Coupon</th>
        <th scope="col" style="width: 256.062px;">Offer</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each coupons}}
        <tr>
          <td scope="row">{{this.coupon}}</td>
      
          <td scope="row">{{this.off}}%</td>
         
          <td>
   
            <a
              href="/admin/delete-coupon?id={{this._id}}"
              onclick="return swal('do you  want to remove')"
            ><i class="fa fa-trash deleteBtn" style="
    padding: 0px;
    margin-top: -8px;
"></i></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
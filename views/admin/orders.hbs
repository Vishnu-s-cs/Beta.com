<section >
    <div class="container">
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr>
                    <th>Date</th>
                    
                    <th>Status</th>
                    <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.deliveryDetails.Date}}</td>
                        
                        <td><span id="span{{this._id}}">{{this.status}}</span>
                          <div class="btn-group">
                          <button type="button" style="width: 5px;height: 5px;" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    
  </button>
                      <div class="dropdown-menu">
  <form class="form px-4 py-3" >
    <div class="form-group">
      <label for="exampleDropdownFormEmail1"> Set status</label>
      <input type="status" name="status" class="form-control"id="status{{this._id}}" >
    </div>
    
   
    <button type="submit"onclick="setStatus('{{this._id}}')" class="btn btn-primary">Set</button>
  </form>
  </div>
 
                        </td>
                        <td>
                            <p>
  <button class="btn btn-primary" data-toggle="collapse" data-target="#1{{this._id}}" type="button" onclick="userDetails('{{this.userId}}','{{this._id}}')" aria-expanded="false" aria-controls="multiCollapseExample1"> User details</button>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#2{{this._id}}" aria-expanded="false" aria-controls="multiCollapseExample2">Order details</button>
  
</p>
<div class="row">
  <div class="col">
    <div class="collapse multi-collapse" id="1{{this._id}}">
      <div class="card card-body">
        <h6>Name:</h6><span id="name{{this._id}}"></span><br>
        <h6>Email:</h6><span id="email{{this._id}}"></span>
        
      </div>
    </div>
  </div>
  <div class="col">
    <div class="collapse multi-collapse" id="2{{this._id}}">
      <div class="card card-body">
        <h5>Address:{{this.deliveryDetails.address}}</h5><br>
        <h5>Pincode:{{this.deliveryDetails.pincode}}</h5><br>
        <h5>Mob.No:{{this.deliveryDetails.mobile_No}}</h5><br>
        <h5>Payment:{{this.payment_Method}}</h5><br>
        <h5>Amount:{{this.totalAmount}}</h5><br>
        <h5>Status:{{this.status}}</h5><br>
        <a href="/admin/ordered-products?id={{this._id}}">Poducts</a>

      </div>
    </div>
  </div>
</div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
<section >
    <div class="container">
        <div class="row">
            <table class="table table-bordered" id="userTable">
                <thead>
                    <tr>
                    <th>Date</th>
                    
                    <th style="width: 171.325px;;">Status</th>
                    <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.date}}</td>
                        
                        <td>
                         <select name="status" id="status{{this._id}}" class="betaButton" onchange="setStatus('{{this._id}}')" >
                          <option value="{{this.status}}">{{this.status}}</option>
                          <option value="ordered">ordered</option>
                          <option value="approved">approved</option>
                          <option value="cancelled">cancelled</option>
        <option value="shipped">shipped</option>
         <option value="out for delivery">Out for delivery</option>
           <option value="Delivered">Delivered</option>
      </select>
 
                        </td>
                        <td>
                            <p>
  <button class="betaButton" data-toggle="collapse" data-target="#1{{this._id}}" type="button" onclick="userDetails('{{this.userId}}','{{this._id}}'); toggle('{{this._id}}')" aria-expanded="false" aria-controls="multiCollapseExample1" style="
    width: 8rem;
"> User details</button>
  <button class="betaButton" type="button" data-toggle="collapse" data-target="#2{{this._id}}" aria-expanded="false" aria-controls="multiCollapseExample2" style="
    width: 10rem;
" onclick="toggle1('{{this._id}}')">Order details</button>
<a href="/admin/remove-order?id={{this._id}}"><i class="fa fa-close" style="
    font-size: 2rem;
    padding-left: .5rem;
    position: absolute;
    color: #c90606;
" ></i></a>

  
</p>
<div class="row">
  <div class="col">
    <div class="collapse multi-collapse ud clr" id="1{{this._id}}">
      <div class="card card-body" style="padding: 2rem;">
        <h6>Name:</h6><span id="name{{this._id}}"></span><br>
        <h6>Email:</h6><span id="email{{this._id}}"></span>
        
      </div>
    </div>
  </div>
  <div class="col">
    <div class="collapse multi-collapse dd clr" id="2{{this._id}}" style="
    width: 36rem;
">
      <div class="card card-body" style="padding: 2rem;">
        <h5>Address:{{this.deliveryDetails.address}}</h5><br>
        <h5>Payment:{{this.payment_Method}}</h5><br>
        <h5>Amount:{{this.totalAmount}}</h5><br>
        <h5>Status:{{this.status}}</h5><br>
        <a href="/admin/ordered-products?id={{this._id}}" class="betaButton" style="text-align: center;padding-top: 9px;">View Products</a>

      </div>
    </div>
  </div>
</div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
<style>
  .clr {
    display: none !important;
  }

  .sft {
   display: block !important;
  }
</style>
<script>
  function toggle(id) {
    console.log(id)
    document.getElementById("1"+id).classList.add("sft");//user details
    document.getElementById("2"+id).classList.remove("sft");//delivery details

  }
   function toggle1(id) {
  document.getElementById("1"+id).classList.remove("sft");
  document.getElementById("2"+id).classList.add("sft");

  }
</script>
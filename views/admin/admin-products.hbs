<section >
  <div class="row">
    <a href="/admin/add-products"class="btn btn-success mt-1 ml-auto">ADD PRODUCTS</a>
  </div>
<table class="table mt-3">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">catogery</th>
      <th scope="col">Discription</th>
      <th scope="col">prize</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
     
      <td>{{this.productname}}</td>
      <td>{{this.catogery}}</td>
      <td>{{this.discription}}</td> 
      <td>{{this.prize}}</td>
      <td><img style="width: 50px;height: 60px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product?id={{this._id}}"class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product?id={{this._id}}"class="btn btn-danger" onclick="return confirm('Are you  want to delete{{this.Name}} this product')"> Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</section>

 

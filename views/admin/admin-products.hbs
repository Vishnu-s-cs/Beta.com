<section class="mr-4" >

  <div class="row">
    <a href="/admin/add-products"class=" betaButton mt-1 ml-auto" style="
    position: relative;
    width: 9rem;
"><span style="position: absolute;
    padding-top: 10px;">Add Products</span></a>
  </div>
  <a href="/admin/manage-categories" class="betaButton" style="
    position: absolute;
    width: 10rem;
    top: 6.5rem;
"><span style="position: absolute;
    padding-top: 10px;">Manage Category</span></a>
 
<table class="table mt-3" id="userTable">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">category</th>
    
      <th scope="col">Description</th>
      <th scope="col">price</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    
    <tr>
     
      <td>{{this.productname}}
      
      </td>
      {{#each ../categories}}
      
      {{#ifCond  this._id ../this.category}}
     
      <td>{{this.category}}</td>
   
      {{/ifCond}}
      {{/each}}
     
      <td>{{this.description}}</td> 
      <td>{{this.price}}</td>
      <td><img style="width: 50px;height: 60px; " src="/product-images/{{this._id}}.jpg" alt="" ></td>
      <td><a href="/admin/edit-product?id={{this._id}}"><img
                src="/images/EditButton.svg"
                alt=""
                class="editBtn"
              /></a>
     <i class="fa fa-trash deleteBtn" style="padding-left: 2.4rem; cursor: pointer;z-index: 5000;" onclick="productRemove('{{this._id}}','{{this.productname}}')"></i></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</section>

 

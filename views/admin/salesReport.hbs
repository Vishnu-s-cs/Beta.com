             labels: date,
             datasets: [{
                 label: "Sales",
                 fill: false,
                 backgroundColor: "rgba(255, 51, 204, 2)",
                 data: money
             }]
         },
         options: {
             responsive: true
         }
     });
  },300)
      setTimeout(()=>{

 var ctx3 = $("#monthly").get(0).getContext("2d");

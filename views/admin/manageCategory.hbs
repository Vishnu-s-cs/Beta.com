<section class="mr-4">
      <div class="row">
    {{!-- <a href="/admin/add-category"class=" betaButton mt-1 ml-auto" style="text-decoration: none ; color:black">Add Category</a> --}}
    <section class="category">
  <form action="/admin/add-category" method="post">
  <label for="category"></label><br>
      <input type="text" class="form-control" name="category" placeholder="Add category...">
      <button type="submit"  class="betaButton mt-1 ml-auto" style="text-decoration: none ; ">Add Category</button>
  </form>
</section>
  </div>
     <table id="userTable" class="table mt-5 pl-3">
    <thead>
      <tr>
        <th scope="col" style="width: 226.3px;">Category</th>
        <th scope="col" style="width: 256.062px;">Offer</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each category}}
        <tr>
          <th scope="row">{{this.category}}</th>
          {{#if this.offer}}
          <td scope="row">{{this.offer}}%</td>
          {{else}}
          <td><span>no offers</span></td>
          {{/if}}
          <td>

            <a href="/admin/edit-category?id={{this._id}}" style="position: absolute;"><img
                src="/images/EditButton.svg"
                alt=""
                class="editBtn"
              /></a>
            <a href="/admin/add-offer?id={{this._id}}" style="margin-left: 8rem;margin-right: -82px;"> <button type="submit"  class="betaButton mt-1 ml-auto" style="text-decoration: none ; ">Add Offer</button></a>
        
            <a
              href="/admin/delete-category?id={{this._id}}"
              onclick="return confirm('Are you  want to remove {{this.category}}')"
            ><i class="fa fa-trash deleteBtn" style="
    padding-left: 0px;
    left: 54rem;
"></i></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
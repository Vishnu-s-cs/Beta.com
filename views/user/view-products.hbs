
<section class="sec">
  
  
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="https://images-eu.ssl-images-amazon.com/images/G/31/img19/Wireless/OnePlus/OnePlus6T/PriceDrop/D9867094_IN_WLME_OnePlus_PriceDrop_NewKV_PC_LP_1500x600._CB465812565_.jpg"
          class="d-block " alt="...">
      </div>
      <div class="carousel-item">
        <img src="https://www.tapsmart.com/wp-content/uploads/2017/05/whyswitch.jpg" class="d-block" alt="...">
      </div>
      <div class="carousel-item">
        <img
          src="https://fdn.gsmarena.com/imgroot/news/19/06/xiaomi-mi-9t-malaysia-philippines/-1220x526/gsmarena_003.jpg"
          class="d-block" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>







  <div class="container mt-5">

    <div class="row main">
      {{#each products}}


      <div style="margin-top:6px;" class=" col-sm-12-md-4 ">
        <div id="card" class="card " style="width: 14rem;">
          <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 id="card-name" class="card-title">{{this.productname}}</h5>
            <p id="card-text" class="card-text">{{this.discription}}</p>
            <p class="card-text">Rs.{{this.prize}}</p>
            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">add to cart</button>
            {{#if ../user}}<div class="like-btns"> <button onclick="wishList('{{../user._id}}','{{this._id}}')" class="like float-right "><img
                id="like{{this._id}}" class="icon-like" src="/images/heart.png" alt=""><img id="liked{{this._id}}"
                class="icon-liked" src="/images/liked.png"
                alt=""></button>{{#each ../wishlist }}{{#iff this ../this._id}}{{#if status}}
            <button id="likebtn{{../this.id}}" onclick="unWish('{{../../../user._id}}','{{../../this._id}}')" class="liked float-right liked{{../../this._id}}"><img  class="iconliked" src="/images/liked.png"
                alt=""></button>
            {{/if}}
            {{/iff}}{{/each}}</div>{{/if}}

          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>


 

</section>

<section class="orders">
  
<table class="table table-bordered mt-5" id="userTable"style="margin-left:5rem;border:0">
  <thead>
    <tr>
     
     
      <th scope="col">Amount</th>
     
      <th scope="col">Status</th>
       <th scope="col" style="
    width: 19rem;
">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
     
    

      <td scope="row">{{this.totalAmount}}</td>
   
      <td scope="row"  id="status{{this._id}}" >{{this.status}}</td>
      
      <td scope="row"><a href="/orderProducts?id={{this._id}}"class="betaButton">View Products</a>
     <span class="betaButton"  onclick="setStatus('{{this._id}}')"  style="cursor: pointer;">
      Request cancel order
      </span>
     </td>
      
    </tr>
    {{/each}}
  </tbody>
</table>
</section>
<style>
  th{
        width: 8rem;
}
</style>